<%= render partial: 'web/shared/back_link' %>

<h3>New employee</h3>

<%= form_for @employee do |f| %>
  <%= errors_for(@employee)  %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :salary %>
    <%= f.text_field :salary, class: "form-control", type: 'number' %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Employee::AVAILABLE_STATUSES) %>
  </div>
  <div class="form-group">
    <%= f.label :contacts %>
    <%= f.text_area :contacts, "class" => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :skills %>
    <ul class="form-skills" data-namespace="employee">
      <% skill_titles = Array(params[:employee] && params[:employee][:skill_titles]) %>
      <% skill_titles.each do |skill_title| %>
        <li><%= skill_title %></li>
      <% end %>
    </ul>
  </div>
  <%= f.submit 'Create', class: 'btn btn-default' %>
<% end %>
